<head>
  <link rel="stylesheet" type="text/css" media="screen" href="/css/login.css">
  <script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
  <script src="/js/login.js" type="text/javascript" charset ="utf-8"></script>
</head>

<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
	<div class="login-container">
      <div id="output"></div>
      <div class="avatar"></div>
      <div class="form-box">
          <div class="field">
            <div name="user"><%= f.email_field :email, autofocus: true, :placeholder => 'Email' %></div>
          </div>
          <br>
          <div class="field">
              <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password', :style => "font-family:sans-serif" %>
          </div>
          
      </div>
      <div class="form-box-2">
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.label :기억하기 %>&nbsp;&nbsp;
            <%= f.check_box :remember_me, :class => "check_box" %>
          </div>
        <% end -%>
      </div>
      
      <div class="form-box-1">
          <div class="actions">
            <div class="btn-info btn-block login"><%= f.submit "Log in" %></div>
          </div>
<% end %>
      </div>
  </div>
</div>
<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4" style="text-align:center">
      <a href="/users/sign_up"><input class="btn icon-btn btn-success" type="submit" value="처음이에용"></a>
      <a href="/users/password/new"><input class="btn icon-btn btn-warning" type="submit" value="암호몰라용"></a>
  </div>
  <div class="col-md-4"></div>
</div>