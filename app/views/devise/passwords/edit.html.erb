<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>
<br><br><br><br><br>

<h2 style="text-align:center"><span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>&nbsp;비밀번호 변경하기</h2><br>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <div class="form-group">
        <label style="font-size:20px">새로운 비밀번호</label>
        <% if @minimum_password_length %>
          <small>(<%= @minimum_password_length %>자 이상 입력해주세요)</small><br />
        <% end %>
        <%= f.password_field :password, :class => 'form-control input-lg', autofocus: true, autocomplete: "off" %>
        <br>
        <label style="font-size:20px">다시 한번 입력해주세요</label>
        <%= f.password_field :password_confirmation, :class => 'form-control input-lg', autocomplete: "off" %>
    
      </div>
		    <div class="row">
		      <div class="col-xs-12 col-md-6">
  		      <%= f.submit "변경하기", :class => 'btn btn-primary btn-block btn-lg' %> 
  		    </div>
  		    <div class="col-xs-12 col-md-6">
  		      <a href="/users/sign_in" class="btn btn-success btn-block btn-lg">로그인하러 가기</a>
  		    </div>
  		  </div>  
  	</div>
  	<div class="col-md-4"></div>
	</div>
</div>
<%= f.hidden_field :reset_password_token %>
<%= devise_error_messages! %>
<% end %>
