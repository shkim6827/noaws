<!--사이드 로그인창 시작 -->

<div class ="container-fluid heading"  style ="background-color:#F5F5F5;">
    <div class ="row">
        <div class ="col-md-3 col-sm-3 col-lg-3">
                <div class="panel panel-default" style="border: 3px solid #B0AEAA; border-radius:3%">
                    <div class="panel-body">
                            <% if current_user.nil? %>
                                <center>
                                    <a href="/users/sign_in" class="btn btn-outlined btn-primary" style ="margin-top: 10px; padding-left: 40px;padding-right: 40px ;" method="POST" value="LOGIN">Log in</a>
                                    <p><a href="/users/sign_up" class="btn btn-outlined btn-success" style ="margin-top: 10px;padding-left: 40px;padding-right: 40px ;">Sign up</a></p>
                                </center>
                            <% else %>
                                <div class="row">
                                    <div class="col-sm-4 col-md-4 col-lg-4">
                                        <img style="height:100px;" src="https://encrypted-tbn3.gstatic.com/images?q=tbn:ANd9GcRhTeyyuPByQZy0yHP-18Rc6jw-jXQ5VginV5a6z1_egTTJM7QURg" />
                                    </div>
                                    <div class="col-sm-8 col-md-8 col-lg-8">
                                        <h3><%= current_user.nickname %></h3>
                                        <p>직업<span style="color:grey">ㅣ</span><%= current_user.job %></p>
                                        <p>키<span style="color:grey">ㅣ</span><%= current_user.tall %> &nbsp;&nbsp; 
                                         나이<span style="color:grey">ㅣ</span><%= current_user.age %> </p>
                                    </div>
                                </div>
                                <div class="row" style="text-align:center">
                                  <a href="/users/edit">
                                  <button class="btn btn-outlined btn-success" style="width:120px">
                                    정보수정
                                  </button>
                                  </a>
                                  <a href="/users/sign_out">
                                  <button class="btn btn-outlined btn-primary" style="width:120px">
                                    로그아웃
                                  </button>
                                  </a>
                                </div>
                            <% end %>
                    </div>                        
                </div>
    <!-- 사이드 로그인창 종료 -->
    <!-- 사이드바 시작 -->
                <div class="panel panel-default"  style="border: 3px solid #877777; border-radius:3%">
                    <div class="panel-body">
                        <div class="profile-sidebar">
        				    <div class="profile-usermenu">
        					    <ul class="nav" style="font-size:15px">
        						    <li class="active">
        							    <a href="/" style="color:black">
        							    <i><img style="height:30px;" src="https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcRvzs04uY8Hsm_8OkL_EYmZRBmbyUtsDC5iyeWJxUJKwb6ZVhVxOg" /></i>
        							    HOME</a>
            						</li>
            						<li>
            							<a href="/uploadhelp/helpview" style="color:#C26413;">
            							<i><img style="height:30px;" src="https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcRqYJOKeW0mjwbyD3DTves9_T0siEy7qRwXtS2YcUsdXAMMX8dSiA" /></i>
            							오왼패션</a>
            						</li>
            						<li>
            							<a href="/uploadhelp/dailyview" style="color:#CD9E48;">
            							<i><img style="height:30px;" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTo_62jxykB0vesMa2-wLD-I0_OdwfLHMkPlhi4DZQUNBe86_I6" /></i>
            							데일리룩</a>
            						</li>
            						<% if current_user.nil? %>
            						<% else %>
            						<li>
            							<a href="/home/mypage/<%= current_user.id %>" style="color:#841748;">
            							<i><img style="height:30px;" src="https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcR9am2o0O8xCVJ9mSC1yxK39OqpQJ6Ki00y35VnfRQoL04eJhh6rYpFsQ" /></i>
            							마이페이지</a>
            						</li>
            						<% end %>
            					</ul>
        				    </div>
                        </div>
                    </div>
    		    </div>
    		    <!-- 선호도 비율 -->
    		    <div class="panel panel-default"  style="border: 3px solid black; border-radius:3%">
                    <div class="panel-body">
        		    <div class="chartcloud">
            		    <center style="color:navy">
            		        남성
        		        </center>
        		        <hr style="margin:5px">
            		    <div class="col-md-6">
                		    <label>왼쪽 선호도</label>
                		    <div class="contain">
                                <div class="chart" data-percent="<%= @manleftpercent.round(1) %>"><%= @manleftpercent.round(1) %>% </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <label>오른쪽 선호도</label>
                		    <div class="contain">
                                <div class="chart" data-percent="<%= @manrightpercent.round(1) %>"><%= @manrightpercent.round(1) %>% </div>
                            </div>
                        </div>
                        
                        <center style="color:#D23535">
            		        여성
        		        </center>
        		        <hr style="margin:5px">
                        <div class="col-md-6">
                            <label>왼쪽 선호도</label>
                            <div class="contain">
                                <div class="chart" data-percent="<%= @womanleftpercent.round(1) %>"> <%= @womanleftpercent.round(1) %>% </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <label>오른쪽 선호도</label>
                		    <div class="contain">
                                <div class="chart" data-percent="<%= @womanrightpercent.round(1) %>"> <%= @womanrightpercent.round(1) %>% </div>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
                <!-- 선호도 비율 끝 -->
            </div>
            
    <!-- 사이드바 종료 -->
        <div class="col-md-9">
            <div class ="col-md-12">
        <!-- 프로필 콜 시작 -->
        
            
            <div class="row">
                        <div class="col-xs-12 col-lg-6 col-md-6">
                        <div class="panel panel-default card" style="border:0px">
                        <div class="panel-body">
                            <div class="col-md-4">
                                <img style="border-radius:3%; height:120px; width:120px; margin-left:-10px;" src="https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcR25N-t7UILQMC2KH_bk2hSbUpYzIgdcI4ASGnXouiXdvvbLRb0">
    					  		<div class="profile-usertitle-name" style ="padding-top:10px; text-align:center; font-size:15px">
            					    (<%= @user.age %>,&nbsp;<span style="font-size:11px"><%= @user.job %></span>)
            					</div>
        					</div>
        				    <div class="col-md-8">
            				    <div class="profile-usermenu">
            				    <h3>'<%= @user.nickname%>'의 SPEC</h3>
            					    <ul class="nav" style="font-size:16px">
            						    <li>
                							<span class="glyphicon glyphicon-play text-success"></span>
                							성별ㅣ<%=@user.sex%>
                						</li>
            						    <li class="active">
            							    <span class="glyphicon glyphicon-play text-info"></span>
            							    키ㅣ<%=@contents.tall%>
                						</li>
                						<li>
                							<span class="glyphicon glyphicon-play text-warning"></span>
                							TOPㅣ<%=@contents.upsize %>
                						</li>
                						<li>
                							<span class="glyphicon glyphicon-play text-danger"></span>
                							BOTTOMㅣ<%=@contents.downsize%>
                						</li>
                				    </ul>
            				    </div>
        				    </div>
    				    </div>  
                        </div>
                        </div>
                        <div class="col-md-6">
                            <div style="text-align:left">
                                <h3 style="color:#717272"><span class="glyphicon glyphicon-ok"></span>&nbsp;제목</h3><br>
                                <h4><%= @contents.title %></h4><br>
                            </div>
                            <% if user_signed_in? %> 
                                <% if current_user.id == @contents.user_id %>
                				    <div class="profile-userbuttons" style="text-align:right">        				        
            				            <a href ="/uploadhelp/helpmodify/<%= @contents.id %>" type="button" class="btn btn-default btn-sm" style="margin-top:20px;">내용수정</a>
                                        <a href ="/home/helpcontentdestroy/<%= @contents.id %>" type="button" class="btn btn-danger btn-sm" style="margin-top:20px;">삭제</a>
                				    </div>
                				<% end %>
                			<% else %>
                			<% end %> 
        				</div>
		    </div>
		    <!--다른글 보기 시작 -->
		    
            <!--다른글 보기 종료 -->
            <hr style="margin-top:5px">
            </div>
        
        <!-- 컨텐츠부분시작  -->
            <div class ="row">
                <div class="row">
                    <div class="col-md-6">
                        <div class="panel panel-default versus" style="margin-left:30px; height:550px; border: none">
                            <div class="panel-body">
                                <div class ="col-md-12" style="text-align:center">
                                    <img class="detailshot" src="<%= @contents.my_image1.url %>" /><br>
                                    <h1><%= @contents.likeone %></h1>
                                    <% if user_signed_in? %>
                                        <form action = "/home/count" style="text-align:center">
                                            <input type ="hidden" value ="1" name ="like">
                                            <input type ="hidden" value = "<%= current_user.id %>" name= "userid">
                                            <input type ="hidden" value = "<%= @contents.id %>" name ="i_d">
                                            <% if current_user.sex == "남자" %> 
                                                <input type = "hidden" value = "1" name ="manleftlike">
                                            <% else current_user.sex == "여자" %>
                                                <input type = "hidden" value = "1" name ="womanleftlike">
                                            <% end %>
                                            <input class="btn btn-primary" type="submit" value="추천" style="width:100px">
                                        </form>
                                    <% else %>
                                    로그인하시면 투표하실 수 있습니다.
                                    <% end %> 
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="panel panel-default versus" style="margin-right:30px; height:550px; border: none">
                            <div class="panel-body">
                                <div class ="col-md-12 " style="text-align:center; text-align:center;">
                                    <img class="detailshot" src="<%= @contents.my_image2.url %>" /><br>
                                    <h1><%= @contents.liketwo %></h1>
                                    <% if user_signed_in? %>
                                        <form action = "/home/count">
                                            <input type ="hidden" value ="2" name ="like">
                                            <input type ="hidden" value = "<%= current_user.id %>" name= "userid">
                                            <input type ="hidden" value = "<%= @contents.id %>" name ="i_d">
                                             <% if current_user.sex == "남자" %> 
                                                <input type = "hidden" value = "2" name ="manrightlike">
                                            <% else current_user.sex == "여자" %>
                                                <input type = "hidden" value = "2" name ="womanrightlike">
                                            <% end %>
                                            <input class="btn btn-primary" type="submit" value="추천" style="width:100px">
                                        </form>&nbsp;
                                    <% else %>
                                    로그인하시면 투표하실 수 있습니다.

                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>        
                    <div class="row">
                        <div class ="col-md-4">
                            <p style="font-size:20px; margin-left:50px"><span style="font-size:30px; color:#48B0D0">평소에</span>
                            &nbsp;&nbsp;&nbsp;<%= @contents.hashtag%></p>
                        </div>
                        <div class ="col-md-8">
                            <p style="font-size:20px; margin-right:50px"><span style="font-size:30px; color:#48B0D0">참고사항</span>
                            &nbsp;&nbsp;&nbsp;<%= @contents.explain%></p>
                        </div>
                            
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="panel panel-default" style="margin-left:30px; margin-right:30px; height:50px">
                <div class="panel-body">
                <!-- 댓글 -->
                <div class= "col-md-2">
                    <% if current_user.nil? %>
                    <p></p>
                    <% else %>
                    <%= current_user.nickname %>
                    <%end %>
                </div>
                <div class="col-md-10">
                    <% if current_user.nil? %>
                        <form action="#" type="POST">
                            <textarea disabled type="text" class="textarea" placeholder ="로그인해야 댓글 작성이 가능합니다"></textarea>
                            <div style="text-align:right">
                                <a href ="http://sorry-shkim6827.c9.io/users/sign_in" class ="btn">로그인하기</a>
                            </div>
                        </form>
                    <% else %>
                    
                        <div class="row">
							<div class="status-upload">
								<form action="/home/reply" type="POST" style="height:0px">
								    <input type ="hidden" name ="nickname" value = "<%= current_user.nickname %>">
                                    <input type ="hidden" name ="user_id" value = "<%= current_user.id %>">
                                    <input type ="hidden" name ="age" value = "<%= current_user.age %>">
                                    <input type ="hidden" name ="job" value = "<%= current_user.job %>">
                                    <input type ="hidden" name = "help_id" value = "<%= @contents.id %>">
									<textarea class="textarea" placeholder="댓글을 남겨주세요" type="text" name="myreply"></textarea>
									<button type="submit" class="btn" style="background-color:#878787">댓글달기</button>
								</form>
									<!--<ul>
										<li><a title="" data-toggle="tooltip" data-placement="bottom" data-original-title="Audio"><i class="fa fa-music"></i></a></li>
										<li><a title="" data-toggle="tooltip" data-placement="bottom" data-original-title="Video"><i class="fa fa-video-camera"></i></a></li>
										<li><a title="" data-toggle="tooltip" data-placement="bottom" data-original-title="Sound Record"><i class="fa fa-microphone"></i></a></li>
										<li><a title="" data-toggle="tooltip" data-placement="bottom" data-original-title="Picture"><i class="fa fa-picture-o"></i></a></li>
									</ul>-->
							</div><!-- Status Upload  -->
						</div><!-- Widget Area -->
				    <% end %>
				    
				    
                </div>   
                    
                                
                </div>
            </div>
            </div>
    
            <div class="row">
                <div class="col-xs-12 col-md-12 col-lg-12">
                    
                        <% @contents.replies.each do |r| %>
                            <div class ="row">
                                <div class="panel" style="height: 35px; margin-left:30px; margin-right:30px">
                                    <div class ="col-md-10" style="padding-top:7px; font-size:16px">
                                        <span style="color:#1A1A50"><%= r.nickname %></span><span style="font-size:12px">(<%= r.age %>,<%= r.job %>)</span><span style="color:grey">ㅣ</span>
                                        <%= r.comment %>
                                    </div>
                                    <div class ="col-md-2" style="padding-top:3px">
                                        <% if current_user.nil? %>
                                        <% else %>
                                            <% if current_user.id == r.user_id %>
                                                <a style="height:27px; width:40%; font-size: 12px; margin-left: 20px;" class="btn btn-danger" href ="/home/destroy/<%=r.id%>">삭제</a>
                                                <a style="height:27px; width:40%; font-size: 12px;" class="btn btn-warning" href ="/home/modify/<%=r.id%>">수정</a>
                                            <% else %>
                                            <% end %>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        <% end %> 
                        <center><%= will_paginate @replies %></center>
                </div>
            </div>
        </div>
    </div>
</div>